%h2 Sign up
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form|
  = devise_error_messages!
  = form.inputs :name, :email, :password, :password_confirmation
  = form.buttons do
    = form.commit_button :button_html=> {:class => 'awesome red'}, :label => "Sign up"
    = link_to 'Cancel' , "/", :class=> 'awesome'
= render :partial => "devise/shared/links"

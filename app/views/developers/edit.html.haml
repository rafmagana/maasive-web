#account_setting
  %h2
    Edit Your User Account
  .form
    = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |form|
      = devise_error_messages!
      = form.inputs :name, :email, :password, :password_confirmation, :current_password
      = form.buttons do
        = form.commit_button :button_html=> {:class => 'main_button'}, :label => "Update"
        = link_to 'Cancel' , "/", :class=> 'main_button'